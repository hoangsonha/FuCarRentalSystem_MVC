<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hbm2ddl.auto">update</property>
		<property name="dialect">org.hibernate.dialect.SQLServerDialect</property>
		<property name="connection.url">jdbc:sqlserver://localhost:1433;DatabaseName=FUCarRentingSystem;encrypt=true;trustServerCertificate=true</property>
		<property name="connection.username">sa</property>
		<property name="connection.password">12345</property>
		<property name="connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
		
		<mapping class="com.hsf.hsh.pojo.Account"/>
		<mapping class="com.hsf.hsh.pojo.Car"/>
		<mapping class="com.hsf.hsh.pojo.CarProducer"/>
		<mapping class="com.hsf.hsh.pojo.Customer"/>
		<mapping class="com.hsf.hsh.pojo.CarRental"/>
		<mapping class="com.hsf.hsh.pojo.Review"/>
	</session-factory>
</hibernate-configuration>


